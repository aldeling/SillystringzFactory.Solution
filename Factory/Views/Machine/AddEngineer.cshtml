@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer</h2>

<h4>Add an Engineer to this Machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Selete Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Machine list", "Index")</p>