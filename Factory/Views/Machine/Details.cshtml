@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.MachineName): @Html.DisplayFor(model => model.MachineName)</h3>

@if(@Model.JointEntities.Count == 0)
{
  <p>This Machine does not have any Engineers assigned to it</p>
}
else
{
  <h4>Engineers the Machine belongs to:</h4>
  <ul>
    @foreach(EngineerMachine join in Model.JointEntities)
    {
      <li>@join.Engineer.EngineerName</li>
      @using (Html.BeginForm("DeleteJoine", "Machines"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<p>@Html.ActionLink("Back to Machine list", "Index")</p>
<p>@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Edit Machine Details", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>